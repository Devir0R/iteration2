<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        //MyPlayers

        <variable
            name="myplayer1"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="myplayer2"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="myplayer3"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="myplayer4"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="myplayer5"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        //Top5 players

        <variable
            name="topplayer1"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="topplayer2"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="topplayer3"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="topplayer4"
            type="com.example.ron.Players365Client.PlayerStatistics" />

        <variable
            name="topplayer5"
            type="com.example.ron.Players365Client.PlayerStatistics" />


    </data>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        android:orientation="vertical"
        tools:context="com.example.ron.bi.MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageButton
                                android:layout_width="87dp"
                                android:layout_height="87dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.17"
                                android:background="@drawable/homeclicked" />

                            <ImageButton
                                android:id="@+id/SimpleSearch"
                                android:layout_width="87dp"
                                android:layout_height="87dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/searchh" />

                            <ImageButton
                                android:id="@+id/advancedSearchButton"
                                android:layout_width="87dp"
                                android:layout_height="87dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/advansearchh" />



                            <ImageButton
                                android:id="@+id/settingsButton"
                                android:layout_width="87dp"
                                android:layout_height="87dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/setting" />

                            <ImageButton
                                android:id="@+id/exitButton"
                                android:layout_width="87dp"
                                android:layout_height="87dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/exi" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/whiteee" />






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/whiteee" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:background="@drawable/mainpict"
                    android:gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/whiteee" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="My Players"
                    android:textColor="@color/colorWhite"
                    android:textSize="29dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/whiteee" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/lin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TableLayout
                            android:id="@+id/tableMyPlayers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></TableLayout>


                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/whiteee" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="5 Popular Players"
                    android:textColor="@color/colorWhite"
                    android:textSize="29dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/whiteee" />


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="87dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1.40"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/TopButton1"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:padding="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView4"
                                tools:layout_editor_absoluteX="148dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:text="@{myplayer1.name}"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="87dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1.40"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/TopButton2"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:padding="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView4"
                                tools:layout_editor_absoluteX="148dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@{myplayer2.name}"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="87dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1.40"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/TopButton3"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:padding="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView4"
                                tools:layout_editor_absoluteX="148dp" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@{myplayer3.name}"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="87dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1.40"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/TopButton4"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:padding="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView4"
                                tools:layout_editor_absoluteX="148dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@{myplayer4.name}"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="87dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1.40"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/TopButton5"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:padding="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView4"
                                tools:layout_editor_absoluteX="148dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@{myplayer5.name}"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</layout>